<%- include('../partials/header'); -%>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>The Grounds</h1>
      <p>View our Hand-Picked Grounds from around the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/projects/new">Add New Project</a>
      </p>
    </div>
  </header>
    
  <div class="row" >
    <h3>Our Most Popular Sites</h3>
    <div class="col-lg-12 text-center" style="display:flex; flex-wrap:wrap;">
      <%  projects.forEach(function(project){%>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= project.image %>" alt="">
            <div class="caption ">
              <h4 class=""><%= project.name %> </h4>
            </div>
            <p>
              <a href="/projects/<%= project._id%>" class="btn btn-primary">More info</a>
            </p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('../partials/footer'); -%>
