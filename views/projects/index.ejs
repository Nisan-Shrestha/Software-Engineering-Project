<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://fonts.googleapis.com/css?family=Inter&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"
      type="text/javascript"
      async
    ></script>

    <link
      rel="stylesheet"
      href="https://unpkg.com/@picocss/pico@latest/css/pico.min.css"
    />

    <script
      src="https://kit.fontawesome.com/1bcd2404f3.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body data-theme="dark">
    <%- include('../partials/header'); -%> 
    <%if(error && error.length > 0){ %>
    <% console.log(error[0]) %> <% } %> <%if(success && success.length > 0){ %>
    <% console.log(success[0])%> <% } %>
    
    

      <!-- Searchbar -->
      <br />
      <div class="container">
        <div>
          <form class="searchbar grid" action="/projects/search" method="get">
            <input type="search" name="dsearch" placeholder="Search" />
            <Button type="submit"
              ><i class="fa-solid fa-magnifying-glass"></i
            ></Button>
          </form>
          
        </div>
        <div></div>
      </div>
    </div>
    <br />

    <div class="projectlist container">
      
      <% if(currentUser){ %>
        <% if(currentUser.username != "admin"){ %>
          <h1>Project List</h1>
          <a href="/projects/new" role="button">New Project</a>
          <a href="/projects/myprojects/<%= currentUser.id %>" role="button">My Project</a>
          <% } else {%>
            <div class="grid">
              <h1>Project List</h1>
              <div></div>
              <a href="/admin" ><Button>Admin Panel</Button></a>
            </div>
            <% }} else{%>
              <h1>Project List</h1>  
            <% } %>
            
            
            
     
      

      <% if(projects.length === 0){%>
      <% }else{ %>
      <% projects.forEach(function(project){%>
        <% if(currentUser){ %>
          <% if(project.author.filter(e => e.id.equals(currentUser.id)).length > 0){ var owner =  true} %>
          <% } %>
        <% if(project.reviewStatus || owner ){%>      
        <article class="project">
          <header class="projectName">
            <strong><%= project.title %></strong>
          </header>
          <div class="description">
            Abstract: <%= project.abstract ? `${project.abstract.slice(0,30)}...`:
            'No abstract available!' %>
          </div>
          <div class="projectAuthor">Authors: <%= project.authors %></div>
          <div class="supervisor">Supervisor: <%=project.supervisor%></div>
          <br />
          <div class="grid">
            <!-- Extra grids for spacing -->
            <div></div>
            <div></div>
            <a href="/projects/<%= project._id%>" role="button">More info</a>
            <div></div>
            <div></div>
          </div>
        </article>
        <% } %>
      <% })} %>
    </div>

    
  </body>
</html>
<br /><br />

<style>
  .projectName {
    font-size: 1.4rem;
  }
</style>




